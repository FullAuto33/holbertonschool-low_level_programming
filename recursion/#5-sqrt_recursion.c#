#include "main.h"


/**
 * main - check the code
 *
 * Return: Always 0.
 */
int square(int n, int result)
{
if (result * result == n)
{
return (result);
}
else if (result * result > n)
{
return (-1);
}
return (square(n, result + 1));
}


/**                                                                                                                                                                            
 * main - check the code                                                                                                                                                       
 *                                                                                                                                                                             
 * Return: Always 0.                                                                                                                                                           
 */

int _sqrt_recursion(int n)
{
return (square(n, 1));
}